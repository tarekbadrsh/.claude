{
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "MAX_THINKING_TOKENS": "31999",
    "ANTHROPIC_MODEL": "claude-opus-4-5-20251101",
    "ANTHROPIC_DEFAULT_OPUS_MODEL": "claude-opus-4-5-20251101",
    "ANTHROPIC_DEFAULT_SONNET_MODEL": "claude-opus-4-5-20251101",
    "ANTHROPIC_DEFAULT_HAIKU_MODEL": "claude-opus-4-5-20251101",
    "CLAUDE_CODE_SUBAGENT_MODEL": "claude-opus-4-5-20251101"
  },
  "permissions": {
    "allow": [
      "WebSearch"
    ],
    "deny": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(git restore:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git revert:*)",
      "Bash(git stash:*)",
      "Bash(git stash drop:*)",
      "Bash(git stash pop:*)",
      "Bash(git tag:*)",
      "Bash(git branch -d:*)",
      "Bash(git branch -D:*)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(rm -r:*)",
      "Bash(rm -rf:*)",
      "Bash(rmdir:*)"
    ]
  },
  "enabledPlugins": {},
  "fileSuggestion": {
    "type": "command",
    "command": "~/.claude/file-suggestion.sh"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/custom-status-line.sh"
  }
}